<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/reports_header"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="Reports " />

            <ImageView
                android:layout_width="@dimen/chevron_size_title"
                android:layout_height="@dimen/chevron_size_title"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@drawable/ic_chevron_right"
                android:tint="@color/dark_main" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/reports_details"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:id="@+id/reports_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reports_count"
                    android:layout_width="@dimen/chevron_size_title"
                    android:layout_height="@dimen/chevron_size_title"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:textSize="18dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/reports_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Reports submitted" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reports_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/submit_report_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/blue_dark"
                    android:text="Report a test result"
                    android:layout_marginStart="@dimen/spacing_medium"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/reports_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view_testing_centers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/blue_dark"
                    android:text="View nearby testing centers"
                    android:layout_marginStart="@dimen/spacing_medium"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>